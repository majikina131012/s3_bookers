<main>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
        <%= render 'list', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
          <%= link_to '新しい順', books_path(latest: "true"), class:"btn btn-outline-primary mb-1" %>
          |<%= link_to '古い順', books_path(old: "true"), class:"btn btn-outline-secondary ml-1 mb-1" %>
          |<%= link_to '評価の高い順', books_path(star_count: "true"), class:"btn btn-outline-warning ml-1 mb-1" %>

          <h4>タグリスト</h4>
            <% @tag_list.each do |list|%>
              <%=link_to list.name,search_tag_path(tag_id: list.id) %>
              <%="(#{list.books.count})" %>
            <% end %>


          <table class="table">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th>Tag</th>
              <th>Favorite</th>
              <th>Comment</th>
              <th><br></th>
            </tr>

            <% @books.each do |book| %>

            <tr>
              <td><%= link_to user_path(book.user.id) do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
              </td>

              <td><%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
              </td>

              <td><%= book.body %></td>

              <td>
                <% book_tags = book.tags %>
                <% book_tags.each do |tag| %>
                  <%= link_to search_tag_path(tag_id: tag.id) do %>
                    <i class="fas fa-tag"></i><%= tag.name %>
                  <% end %>
                <% end %>
              </td>

              <td>
              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book.id), method: :delete do %>
                  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(book.id), method: :post do %>
                  <i class="fas fa-heart" aria-hidden="true"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% end %>
              </td>

              <td>
                <%= link_to "#{book.book_comments.count}", book_path(book.id) %>
              </td>

              <td>
                <%= render 'rate', book: book %>
              </td>

            </tr>
            <% end %>
          </table>
        </div>
    </div>
  </div>
</main>