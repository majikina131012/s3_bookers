<main>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          
          <div class="field">
            <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
            <%= f.text_field :name, value: @tag_list, class:"form-control"%>
          </div>
          
          <%= f.submit 'Update Book', class:"btn btn-success mb-4" %>
        <% end %>
        <p>
          <%= render 'rate', book: @book %>
        </p>
        <p>
          <%= link_to 'Show', book_path(@book.id), class:"btn btn-secondary" %>
        </p>

        <p>
          <%= link_to 'Back', books_path, class:"btn btn-light" %>
        </p>
      </div>
    </div>
  </div>
</main>