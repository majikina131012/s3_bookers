<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Favorite</th>
            <th>Comment</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td>
              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book.id), method: :delete do %>
                  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(book.id), method: :post do %>
                  <i class="fas fa-heart" aria-hidden="true"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td> <%= link_to "#{book.book_comments.count}", book_path(book.id) %></td>
          </tr>
          <% end %>
        </table>
        <table class="today_book">
          <thead>
            <tr>
              <th class="today_book_t">今日の投稿数</th>
              <th class="today_book_t">前日の投稿数</th>
              <th class="today_book_t">前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="today_book_t"><%= @today_book.count %></td>
              <td class="today_book_t"><%= @yesterday_book.count %></td>
              <% if @yesterday_book.count > 0 %>
                <% the_day_before_ratio = (@today_book.count - @yesterday_book.count) / @yesterday_book.count %>
              <% else %>
                <% the_day_before_ratio = 0 %>
              <% end %>
              <td class="today_book_t"><%= (the_day_before_ratio * 100).round %>%</td>
            </tr>
          </tbody>
        </table>
        <table class="today_book">
          <thead>
            <tr>
              <th class="today_book_t">今週の投稿数</th>
              <th class="today_book_t">先週の投稿数</th>
              <th class="today_book_t">前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="today_book_t"><%= @this_week_book.count %></td>
              <td class="today_book_t"><%= @last_week_book.count %></td>
              <% if @last_week_book.count > 0 %>
                <% the_week_before_ratio = (@this_week_book.count - @last_week_book.count) / @last_week_book.count %>
              <% else %>
                <% the_week_before_ratio = 0 %>
              <% end %>
              <td class="today_book_t"><%= (the_week_before_ratio * 100).round %>%</td>
            </tr>
          </tbody>
        </table>
        <h4>7日間分の投稿数</h4>
        <table class="today_book">
          <thead>
            <tr>
              <% (6.downto(0)).each do |n| %>
                <th class="today_book_t"><%= n == 0 ? '今日' : "#{n}日前" %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% (6.downto(0)).each do |n| %>
                <td class="today_book_t"><%= @books.where(created_at: n.day.ago.all_day).count %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <canvas id="myChart"></canvas>
          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
              var ctx = document.getElementById('myChart');
              var myChart = new Chart(ctx, {
                  type: 'line',
                      data: {
                        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
                        datasets: [
                          {
                            label: '投稿した本の数',
                            data: [
                              <%= @books.posted_6days_ago.count %>,
                              <%= @books.posted_5days_ago.count %>,
                              <%= @books.posted_4days_ago.count %>,
                              <%= @books.posted_3days_ago.count %>,
                              <%= @books.posted_2days_ago.count %>,
                              <%= @books.posted_yesterday.count %>,
                              <%= @books.posted_today.count %>
                            ],
                            borderColor: "rgba(0,0,255,1)",
                            backgroundColor: "rgba(0,0,0,0)",
                            tension: 0.4
                          }
                        ],
                      },
                      options: {
                        title: {
                          display: true,
                          text: '7日間の投稿数の比較'
                        },
                        responsive: true,
                        scales: {
                          y:{
                            suggestedMin: 0,
                            suggestedMax: 10
                          },
                          x:{
                            stacked: true
                          },
                        },
                      }
              });
            </script>
